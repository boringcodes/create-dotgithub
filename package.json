{
  "name": "generator-create-dotgithub",
  "version": "1.2.0",
  "description": "Boring GitHub Dotfiles Generator (download from boringcodes/dotgithub)",
  "homepage": "https://github.com/boringcodes/create-dotgithub",
  "bugs": "https://github.com/boringcodes/create-dotgithub/issues",
  "license": "MIT",
  "author": "BoringCodes <hi@boringcodes.com> (https://boringcodes.com)",
  "repository": "https://github.com/boringcodes/create-dotgithub.git",
  "main": "generators/app/index.js",
  "files": [
    "generators"
  ],
  "scripts": {
    "purge": "rm -rf node_modules",
    "format": "prettier --write --ignore-path .gitignore **/*.js",
    "format:check": "prettier --check --ignore-path .gitignore **/*.js",
    "lint": "eslint --ignore-path .gitignore **/*.js",
    "release": "standard-version --no-verify",
    "release:major": "yarn release --release-as major",
    "release:minor": "yarn release --release-as minor",
    "release:patch": "yarn release --release-as patch"
  },
  "keywords": [
    "yeoman-generator",
    "create-dotgithub"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "yeoman-generator": "^4.12.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@boringcodes/eslint-config": "^1.2.1",
    "@boringcodes/prettier-config": "^1.3.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0"
  }
}
